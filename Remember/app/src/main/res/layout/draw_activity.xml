<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardToolbarDraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarDraw"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="?android:actionBarSize">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btnBackDraw"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical|right"
                        android:background="#00ffffff"
                        android:src="@drawable/icon_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:id="@+id/btnNextDraw"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:background="#00ffffff"
                        android:src="@drawable/icon_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:id="@+id/btnStrokeDraw"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical|right"
                        android:background="#00ffffff"
                        android:src="@drawable/icon_stroke_width"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:id="@+id/btnColorDraw"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical|right"
                        android:background="#00ffffff"
                        android:src="@drawable/icon_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:id="@+id/btnDoneDraw"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical|right"
                        android:background="#00ffffff"
                        android:src="@drawable/icon_done"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/lnGroup"
        android:layout_below="@id/cardToolbarDraw"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

</RelativeLayout>